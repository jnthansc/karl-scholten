---
const {
  title,
  description,
  noindex = false,
  projectTitle,
}: {
  title: string;
  description?: string;
  noindex?: boolean;
  projectTitle?: string;
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />
    {description ? <meta name="description" content={description} /> : null}
    {noindex ? <meta name="robots" content="noindex,follow" /> : null}
    <title>{title}</title>
  </head>
<body>
    <header class="site-header">
      <div class="brand-section">
        <a class="brand" href="/">Karl Scholten</a>
        {projectTitle ? <span class="project-title">{projectTitle}</span> : null}
      </div>
      <nav class="nav">
        <a href="/about/">About</a>
        <a href="/imprint/">Imprint</a>
      </nav>
    </header>

    <main class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <small>© {new Date().getFullYear()} Karl Scholten</small>
    </footer>
  </body>
</html>

<style>
  /* KOLIKÖ Font Face Declarations */
  @font-face {
    font-family: 'KOLIKÖ';
    src: url('/fonts/koliko-regular.woff2') format('woff2'),
         url('/fonts/koliko-regular.woff') format('woff'),
         url('/fonts/koliko-regular.ttf') format('truetype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'KOLIKÖ';
    src: url('/fonts/koliko-light.woff2') format('woff2'),
         url('/fonts/koliko-light.woff') format('woff'),
         url('/fonts/koliko-light.ttf') format('truetype');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'KOLIKÖ';
    src: url('/fonts/koliko-bold.woff2') format('woff2'),
         url('/fonts/koliko-bold.woff') format('woff'),
         url('/fonts/koliko-bold.ttf') format('truetype');
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  :global(:root) {
    color-scheme: light;
    --bg: #ffffff;
    --fg: #0b0d10;
    --muted: #5b6472;
    --border: #e7e9ee;
    --card: #f6f7f9;
    --shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    --radius: 16px;
    --max: 100%;
    --headerH: 56px;
    --footerH: 44px;
    --sat: env(safe-area-inset-top, 0px);
    --sab: env(safe-area-inset-bottom, 0px);
  }

  :global(html, body) {
    height: 100%;
  }

  :global(*, *::before, *::after) {
    box-sizing: border-box;
  }

  :global(body) {
    margin: 0;
    font-family: 'KOLIKÖ', ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica,
      Arial, "Apple Color Emoji", "Segoe UI Emoji";
    font-size: 24px;
    background: var(--bg);
    color: var(--fg);
    overflow-x: hidden;
  }

  :global(body.prep-hide) {
    opacity: 0;
  }

  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  :global(a:hover) {
    text-decoration: underline;
  }

  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: transparent;
    border-bottom: none;
  }

  .site-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 16px;
    padding: 12px 10px;
  }

  .brand-section {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .brand {
    font-weight: 650;
    letter-spacing: 0.2px;
  }

  .project-title {
    margin: 0;
    letter-spacing: -0.02em;
    font-size: 26px;
    color: var(--fg);
  }

  .nav {
    display: flex;
    gap: 14px;
    color: var(--muted);
    font-size: 1.3rem;
  }

  .site-main {
    max-width: var(--max);
    margin: 0;
    padding: 0 10px calc(var(--footerH) + 24px);
  }

  @media (max-width: 900px) {
    .site-main {
      padding: 0;
    }
  }

  .site-footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: var(--footerH);
    display: flex;
    align-items: center;
    color: var(--muted);
    padding: 0 10px;
    background: transparent;
    border-top: none;
    z-index: 1000;
  }

  .site-footer > small {
    display: block;
    max-width: var(--max);
    margin: 0;
  }
</style>


